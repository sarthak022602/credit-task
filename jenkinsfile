pipeline {
    agent any

    tools {
        maven 'Maven' // Replace 'Maven' with the name of your Maven installation in Jenkins Global Tool Configuration
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Code Analysis') {
            steps {
                sh 'mvn sonar:sonar'
            }
        }

        stage('Security Scan') {
            steps {
                sh 'dependency-check.sh'
            }
        }

        stage('Deploy to Staging') {
            steps {
                sh 'aws deploy command here'
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                sh 'run staging integration tests'
            }
        }

        stage('Deploy to Production') {
            steps {
                sh 'aws deploy command here'
            }
        }
    }

    post {
        always {
            mail to: 'developer@example.com',
                 subject: "Pipeline Notification",
                 body: "The pipeline stage has completed. Status: ${currentBuild.currentResult}"
        }
    }
}

